{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "outDir": "dist",                       // Carpeta de salida compilada
    "rootDir": "src", 
    "types": ["node", "express"],                      // Carpeta raíz de código fuente
    "esModuleInterop": true,               // Para compatibilidad con CommonJS
    "forceConsistentCasingInFileNames": true,  // Para evitar problemas en sistemas case-sensitive
    "allowImportingTsExtensions": false,
    "noEmit": false,                     
    "resolveJsonModule": true,             // Importar JSON
    "allowSyntheticDefaultImports": true, // Para importar sin default en algunas libs
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
